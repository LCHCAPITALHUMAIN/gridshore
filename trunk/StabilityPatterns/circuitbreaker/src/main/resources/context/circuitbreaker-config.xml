<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd">

    <aop:aspectj-autoproxy proxy-target-class="true"/>

    <bean class="nl.gridshore.stability.circuitbreaker.AnnotatedMethodCircuitBreakerInterceptor">
        <constructor-arg>
            <map>
                <entry key="someWeirdSystem" value-ref="circuitBreaker"/>
            </map>
        </constructor-arg>
    </bean>

    <bean name="circuitBreaker" class="nl.gridshore.stability.circuitbreaker.SimpleCircuitBreaker"/>
    <bean name="unusedCircuitBreaker" class="nl.gridshore.stability.circuitbreaker.SimpleCircuitBreaker"/>

    <bean class="org.springframework.jmx.export.annotation.AnnotationMBeanExporter">
        <property name="namingStrategy">
            <bean class="nl.gridshore.stability.NamingStrategy"/>
        </property>
    </bean>
</beans>
