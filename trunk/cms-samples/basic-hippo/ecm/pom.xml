<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>nl.gridshore.samples.cms.hippo</groupId>
        <artifactId>hippo-project</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <name>Basic Hippo ECM WAR package</name>
    <description>Basic Hippo ECM WAR package</description>
    <groupId>nl.gridshore.samples.cms.hippo</groupId>
    <artifactId>basic-hippo-ecm</artifactId>
    <packaging>war</packaging>

    <dependencies>
        <dependency>
            <groupId>org.hippoecm</groupId>
            <artifactId>hippo-ecm-package-skin</artifactId>
            <version>${org.hippoecm.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.hippoecm</groupId>
            <artifactId>hippo-ecm-package-war</artifactId>
            <version>${org.hippoecm.version}</version>
            <type>war</type>
        </dependency>

        <!-- Dit heb ik dus nog aangepast -->
        <dependency>
            <groupId>org.hippoecm</groupId>
            <artifactId>hippo-ecm-frontend-engine</artifactId>
            <version>${org.hippoecm.version}</version>
        </dependency>
        
        <!-- local dependencies -->
        <dependency>
            <groupId>nl.gridshore.samples.cms.hippo</groupId>
            <artifactId>basic-hippo-sample-content</artifactId>
            <version>${parent.version}</version>
            <type>jar</type>
        </dependency>

    </dependencies>


    <build>
        <defaultGoal>package</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1-alpha-1</version>
                <configuration>
                    <manifest>
                        <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                    </manifest>
                    <archive>
                        <manifestEntries>
                            <Implementation-Build>${buildNumber}</Implementation-Build>
                        </manifestEntries>
                    </archive>
                    <overlays>
                        <overlay>
                            <groupId>org.hippoecm</groupId>
                            <artifactId>hippo-ecm-package-skin</artifactId>
                            <targetPath>skin</targetPath>
                            <excludes>
                                <exclude>WEB-INF/web.xml</exclude>
                            </excludes>
                        </overlay>
                        <overlay>
                            <groupId>org.hippoecm</groupId>
                            <artifactId>hippo-ecm-package-war</artifactId>
                        </overlay>
                    </overlays>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1.10</version>
                <configuration>
                    <scanIntervalSeconds>5</scanIntervalSeconds>
                    <connectors>
                        <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
                            <port>8080</port>
                        </connector>
                    </connectors>
                    <contextPath>/</contextPath>
                    <systemProperties>
                        <systemProperty>
                            <name>repo.path</name>
                            <value>hippo_repo_db</value>
                        </systemProperty>
                        <systemProperty>
                            <name>repo.config</name>
                            <value>file:${basedir}/../config/src/main/config/local/repository.xml</value>
                        </systemProperty>
                        <systemProperty>
                            <name>log4j.configuration</name>
                            <value>file:${basedir}/../config/src/main/config/local/log4j.properties</value>
                        </systemProperty>
                    </systemProperties>
                </configuration>
                <dependencies>
                    <!-- atomikos dependecies for running jetty:run[-war|-exploded] -->
                    <dependency>
                        <groupId>com.atomikos</groupId>
                        <artifactId>transactions-api</artifactId>
                        <version>3.1.4</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>com.atomikos</groupId>
                        <artifactId>transactions-jta</artifactId>
                        <version>3.1.4</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>com.atomikos</groupId>
                        <artifactId>transactions</artifactId>
                        <version>3.1.4</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>com.atomikos</groupId>
                        <artifactId>atomikos-util</artifactId>
                        <version>3.1.4</version>
                        <scope>runtime</scope>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

</project>
